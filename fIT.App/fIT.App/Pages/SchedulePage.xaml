<?xml version="1.0" encoding="utf-8" ?>
<d:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fIT.App.Pages.SchedulePage"
             xmlns:d="clr-namespace:fIT.App.Pages;assembly=fIT.App"
  >
  <!--BindungContext has to be set on code behind because of IoC-->
  <ListView x:Name="ScheduleList" ItemsSource="{Binding Schedules}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Name}" />
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</d:BasePage>