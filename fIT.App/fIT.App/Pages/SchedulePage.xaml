<?xml version="1.0" encoding="utf-8" ?>
<d:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fIT.App.Pages.SchedulePage"
             xmlns:d="clr-namespace:fIT.App.Pages;assembly=fIT.App"
  >
  <ListView 
    x:Name="ScheduleList" 
    ItemsSource="{Binding Schedules}"
    IsPullToRefreshEnabled="True"
    RefreshCommand="{Binding OnRefresh}"
    IsRefreshing="{Binding IsRefreshing}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Name}" Detail="{Binding Exercises.Count, StringFormat='Übungen: {0}'}"/>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</d:BasePage>